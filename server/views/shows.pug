extends layout

block content
    section.shows-page-new
        .shows-layout
            //- Left side - Big title with blob
            .shows-title-section
                .shows-blob
                    span.blob-text ALL
                    span.blob-text THE
                    span.blob-text SH
                    span.blob-text OW
                .live-stream-badge
                    .live-icon
                        span.broadcast-waves
                        span.play-triangle â–¶
                    span.live-text LIVE
                    span.stream-text STREAM

            //- Right side - Episodes list
            .shows-content-section
                if shows && shows.length
                    ul.episodes-bullet-list
                        each show in shows
                            if show.episodes && show.episodes.length
                                each episode in show.episodes.slice(0, 15)
                                    li
                                        a(href=`/episodes/${episode._id || episode.slug}`)
                                            span.episode-name= episode.title
                                            |  -
                                            span.artist-name= show.artist && show.artist.name ? show.artist.name : show.title
                            else
                                li
                                    a(href=`/shows/${show.slug}`)
                                        span.episode-name= show.title
                                        if show.artist && show.artist.name
                                            |  -
                                            span.artist-name= show.artist.name
                else
                    .no-content
                        p No shows available yet

        //- Join community section
        section.join-community
            h2 JOIN OUR COMMUNITY
            a.submit-link(href="/open-call") SUBMIT YOUR SHOW
