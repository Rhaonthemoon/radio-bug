    style.
        /* ── EASY LANGUAGE BAR ─────────────────────────── */
        .easy-language-bar {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
            padding: 2.5rem 1.5rem 3rem;
            align-items: flex-end;
        }

        .easy-lang-trigger {
            position: relative;
        }

        .easy-lang-btn {
            font-family: inherit;
            font-size: 0.75rem;
            font-weight: 700;
            letter-spacing: 0.14em;
            text-transform: uppercase;
            padding: 0.5rem 1.25rem;
            border-radius: 2rem;
            cursor: pointer;
            transition: background 0.2s, color 0.2s;
        }

        .easy-lang-btn--en {
            background: transparent;
            color: #c1440e;
            border: 2px solid #c1440e;
        }
        .easy-lang-btn--en:hover,
        .easy-lang-btn--en.active {
            background: #c1440e;
            color: #fff;
        }

        .easy-lang-btn--nl {
            background: transparent;
            color: #e08c1a;
            border: 2px solid #e08c1a;
        }
        .easy-lang-btn--nl:hover,
        .easy-lang-btn--nl.active {
            background: #e08c1a;
            color: #fff;
        }

        /* Tooltip bubble */
        .easy-lang-tooltip {
            position: absolute;
            bottom: calc(100% + 0.75rem);
            left: 0;
            width: min(460px, 90vw);
            border-radius: 1.25rem;
            padding: 2rem 1.75rem 1.75rem;
            z-index: 200;
            box-shadow: 0 8px 32px rgba(0,0,0,0.18);
        }

        /* Coda del tooltip */
        .easy-lang-tooltip::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 2rem;
            border-width: 10px 10px 0;
            border-style: solid;
        }

        .easy-lang-tooltip--en {
            background: #c1440e;
            color: #fff;
        }
        .easy-lang-tooltip--en::after {
            border-color: #c1440e transparent transparent;
        }

        .easy-lang-tooltip--nl {
            background: #e08c1a;
            color: #fff;
        }
        .easy-lang-tooltip--nl::after {
            border-color: #e08c1a transparent transparent;
        }

        .easy-lang-tooltip p {
            font-size: 0.875rem;
            font-weight: 700;
            letter-spacing: 0.04em;
            text-transform: uppercase;
            text-align: center;
            line-height: 1.6;
            margin-bottom: 1rem;
        }
        .easy-lang-tooltip p:last-child { margin-bottom: 0; }

        .easy-lang-tooltip a {
            color: #fff;
            text-decoration: underline;
            text-underline-offset: 2px;
        }

        .easy-lang-close {
            position: absolute;
            top: 0.6rem;
            right: 0.75rem;
            background: none;
            border: none;
            color: rgba(255,255,255,0.65);
            font-size: 1rem;
            cursor: pointer;
            padding: 0.2rem 0.35rem;
            transition: color 0.15s;
        }
        .easy-lang-close:hover { color: #fff; }

        /* Alpine transitions */
        .tt-enter { transition: opacity 0.2s ease, transform 0.2s ease; }
        .tt-start { opacity: 0; transform: translateY(6px); }
        .tt-end   { opacity: 1; transform: translateY(0); }

        /* Offline message */
        .radio-offline {
            display: flex;
            align-items: center;
            gap: 0.6rem;
            font-size: 0.8rem;
            font-weight: 700;
            letter-spacing: 0.18em;
            text-transform: uppercase;
            opacity: 0.4;
            padding: 0.5rem 0;
        }

        .radio-offline i {
            font-size: 0.75rem;
        }

        /* Mobile: tooltip diventa bottom sheet */
        @media (max-width: 520px) {
            .easy-lang-tooltip {
                position: fixed;
                bottom: 0;
                left: 0;
                right: 0;
                width: 100%;
                border-radius: 1.25rem 1.25rem 0 0;
                max-height: 72vh;
                overflow-y: auto;
            }
            .easy-lang-tooltip::after { display: none; }
        }
